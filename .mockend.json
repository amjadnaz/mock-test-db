  },

  "Childcategory": {
    "name": { "string": {} },
    "urlPath": { "string": {} }
  },

  "Prices": {
    "currency": { "string": ["$", "Rs"] },
    "price": { "int": { "min": 100, "max": 10000 } }
  },

  "Image": {
    "path": { "regexp": "https://picsum\\.photos/seed/[0-9]{5}/1920/270" }
  }
