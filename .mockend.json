    "articleCount": { "int": { "min": 0, "max": 100 } },
    "childrenCategories": { "hasMany": "Childcategory" }
  },

  "Article": {
    "name": { "string": ["en", "de"] },
    "variantName": { "string": {} },
    "prices": { "belongsTo": "Prices" },
